.page-area{
  position: relative;
  width: 100%;
  height: 100%;
  background-color: honeydew;
}
.down{
  background-color: #eee;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  /* border: 1px solid red; */
  width: 100%;
  height: 70rpx;
  z-index: 999;
}

.down > image{
  position: absolute;
  left: 50%;
  top: 0rpx;
  transform: translate(-50%, -10px);
  width: 100rpx;
  height: 100rpx;
}
.fall{
  /* margin-bottom: 100rpx; */
  display: flex;
  margin-left: 5%;
  /* border: 1px solid red; */
  width: 90%;
  justify-content: space-between;  
  flex-direction: column;
}
.fall > image{
  width:100% ;
  white-space:wrap;
  /* height: 100%; */
}
.modal{
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,0.2);
  z-index: 999999;
}
.content{
  border-radius: 20rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 250px;
  height: 200px;
  background-color: #eee;
}
.modal .close{
  border-radius: 10rpx;
  position: absolute;
  right: 50rpx;
  top: 30rpx;
  display: inline-block;
  width:50rpx;
  height: 50rpx;
}
.modal .close::before{
  transform: rotateZ(45deg);
}
.modal .close::after{
transform: rotateZ(-45deg);
}
.modal .close::after,modal,.close::before{
  position: absolute;
  right: 10rpx;
  top: 25rpx;
  content: "";
  display: block;
  width: 15px;
  height: 2px;
  background-color: #aaa;
}
.personal{
  margin-top: 100rpx;
position: relative;
  width: 100%;
}
.author,.date{
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
  width: 50%;
  margin: 20rpx auto;
}
.btn{
  margin-top: 50rpx;
  font-size: 24rpx;
}