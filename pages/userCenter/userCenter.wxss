.page-area{
  background-color: aliceblue;
  width: 100%;
  height: 100%;
}
.header-area{
  border: 1px solid #ccc;
  border-radius: 15rpx;
  margin: 20rpx auto;
  width: 80%;
  height: 200rpx;
}
.userInfo{
  margin-top: 30rpx;
  float: right;
  width: 70%;
}
.userInfo .username{
  font-weight: bold;
}
.userInfo > text{
  font-size: 24rpx;
  
}
.header-area > image{
  background-color: #eee;
  margin-top: 20rpx;
  margin-left: 20rpx;
  border-radius: 15rpx;
  width: 100rpx;
  height: 100rpx;
}